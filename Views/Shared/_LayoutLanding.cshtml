        <div class="row align-items-center">
            <div class="col-12 col-md-4 order-last order-md-first text-center text-md-start">
                <div class="copyright">&copy; 2022 Tom Nguyen All Rights Reserved</div>
            </div>
            <div class="col-12 col-md-4 d-flex justify-content-center order-0 order-md-2">
                <img src="~/img/NameLogo_turquoiseblue.png" height="50" />
            </div>
            <div class="col-12 col-md-4 d-flex justify-content-center justify-content-md-end order-3">
                <a href="https://www.linkedin.com/in/txn9517"><i class="bi bi-linkedin px-2 socialIcons"></i></a>
                <a href="https://github.com/tn2690/"><i class="bi bi-github socialIcons"></i></a>
            </div>
        </div>
    </footer>*@

    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@

    <!-- Modernizer JS -->
    <script src="~/assets/js/vendor/modernizr.min.js"></script>
    <!-- jQuery JS -->
    <script src="~/assets/js/vendor/jquery.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/assets/js/vendor/bootstrap.min.js"></script>
    <script src="~/assets/js/vendor/slick.min.js"></script>
    <script src="~/assets/js/vendor/tweenmax.min.js"></script>
    <script src="~/assets/js/vendor/js.cookie.js"></script>
    <script src="~/assets/js/vendor/jquery.style.switcher.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
